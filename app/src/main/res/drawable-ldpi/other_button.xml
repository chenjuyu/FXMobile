<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#3AB2FF" android:startColor="#3AB2FF" />

            <stroke android:width="1dp" android:color="#dcdcdc" />

            <corners android:radius="1dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#03A9F4" android:startColor="#03A9F4" />

            <stroke android:width="1dp" android:color="#dcdcdc" />

            <corners android:radius="1dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#03A9F4" android:startColor="#03A9F4" />

            <stroke android:width="1dp" android:color="#fad3cf" />

            <corners android:radius="1dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>